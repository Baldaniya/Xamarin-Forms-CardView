<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossCardViewSample.Pages.CrossCardView"
             xmlns:customControls="clr-namespace:CrossCardViewSample.CustomCardView;assembly=CrossCardViewSample">
  
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments = "Thickness"
                iOS ="0,20,0,0"/>
  </ContentPage.Padding>
    
  <customControls:CustomCard HorizontalOptions="CenterAndExpand"
                              VerticalOptions="CenterAndExpand"
                              CornerRadius="15"
                              Padding="10, 10, 5, 10">
      
        
    <StackLayout Orientation="Vertical"
                  HorizontalOptions="FillAndExpand"
                  VerticalOptions="FillAndExpand">
      
	    <Label Text="Hello, World!" 
              VerticalOptions="CenterAndExpand" 
              HorizontalOptions="CenterAndExpand" />
      
      </StackLayout>
  </customControls:CustomCard>  
</ContentPage>